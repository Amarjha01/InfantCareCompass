# MongoDB Connection String
MONGO_URI=mongodb://localhost:27017/infantcarecompass

# Server Port
PORT=5000

# JWT Secret (you should change this to a secure random string)
TOKEN_SECRET_KEY=your_jwt_secret_key_here

# OpenAI API Key (for Care Co-Pilot AI Medicine Finder)
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration (if using email services)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password

# GitHub Webhook Secret (if using GitHub webhooks)
GITHUB_SECRET=your_github_webhook_secret

# Other environment variables as needed
NODE_ENV=development 